{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && go build -o main cmd/main.go",
    "watchPatterns": ["backend/**"]
  },
  "deploy": {
    "startCommand": "cd backend && ./main",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
